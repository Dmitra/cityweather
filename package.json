{
  "name": "cityweather",
  "version": "0.0.2",
  "description": "Visualization of year city weather data",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.org/Dmitra/cityweather.git"
  },
  "keywords": [
    "city comparison",
    "data visualisation",
    "statistics"
  ],
  "author": "Dmitra",
  "license": "MIT",
  "scripts": {
    "start": "static",
    "build-css": "node-sass scss/index.scss bundle.css",
    "build-min": "browserify src/index.js | uglifyjs -c > bundle.js",
    "build-lib": "browserify dependencies.js | uglifyjs -c > lib.js",
    "watch-js": "watchify src/index.js -d -o bundle.js -v",
    "watch-css": "nodemon -e scss -x \"bash -c 'npm run build-css'\""
  },
  "dependencies": {
    "d3": "<=3.5.0",
    "d3-transform": "latest",
    "backbone-events-standalone": "latest",
    "lodash": "<=3.5.0",
    "plusjs": "https://github.com/Dmitra/plusjs.git",
    "leaflet.markercluster": "latest"
  },
  "devDependencies": {
    "node-static": "latest",
    "node-sass": "latest",
    "browserify": "<=8.1.3",
    "watchify": "latest",
    "nodemon": "=1.1.1"
  }
}
